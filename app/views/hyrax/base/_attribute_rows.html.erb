<!-- Nice marker to scroll to when user hits Read less -->
<% presenter.title.each do |description| %>
    <p class="TCD_work_description"><%= iconify_auto_link(description) %></p>
<% end %>
<span id="TCDspot"></span>
<%= presenter.attribute_to_html(:alternative_title, html_dl: true) %>
<%= presenter.attribute_to_html(:identifier, html_dl: true) %> <!-- shelf mark/reference -->
<%= presenter.attribute_to_html(:location, render_as: :faceted, html_dl: true) %>
<%= presenter.attribute_to_html(:creator, render_as: :faceted, html_dl: true) %>
<%= presenter.attribute_to_html(:contributor, render_as: :faceted, html_dl: true) %>
<%= presenter.attribute_to_html(:doi, html_dl: true) %>
<!-- Marker just before the button -->
<span id="TCDdots"></span>

<!-- The Collapsible metadata -->
<span id="TCDmore">
<%= presenter.attribute_to_html(:rights_statement, render_as: :rights_statement, html_dl: true) %>
<%= presenter.attribute_to_html(:copyright_status, html_dl: true) %>
<%= presenter.attribute_to_html(:license, render_as: :external_link, html_dl: true) %>
<%= presenter.attribute_to_html(:publisher_location, html_dl: true) %>
<%= presenter.attribute_to_html(:publisher, render_as: :faceted, html_dl: true) %>
<%= presenter.attribute_to_html(:date_created, label: t('hyrax.base.show.date_created'), html_dl: true) %>
<%= presenter.attribute_to_html(:language, render_as: :faceted, html_dl: true) %>
<%= presenter.attribute_to_html(:abstract, html_dl: true) %>
<%= presenter.attribute_to_html(:related_url, render_as: :external_link, html_dl: true) %>
<%= presenter.attribute_to_html(:collection_title, html_dl: true) %>
<%= presenter.attribute_to_html(:series_title, html_dl: true) %>
<%= presenter.attribute_to_html(:provenance, html_dl: true) %>
<%= presenter.attribute_to_html(:sponsor, html_dl: true) %>
<%= presenter.attribute_to_html(:subject, render_as: :faceted, html_dl: true) %>
<%= presenter.attribute_to_html(:keyword, render_as: :faceted, html_dl: true) %>
<%= presenter.attribute_to_html(:genre, render_as: :faceted, html_dl: true) %>
<%= presenter.attribute_to_html(:resource_type, render_as: :faceted, html_dl: true) %>
<%= presenter.attribute_to_html(:medium, html_dl: true) %>
<%= presenter.attribute_to_html(:support, html_dl: true) %>
<%= presenter.attribute_to_html(:culture, html_dl: true) %>
<%= presenter.attribute_to_html(:digital_object_identifier, html_dl: true) %>
<% if current_ability.can_create_any_work? %>
    <%= presenter.attribute_to_html(:folder_number, html_dl: true) %>
<% end %>
<%= presenter.attribute_to_html(:source, html_dl: true) %>
<%= presenter.attribute_to_html(:dris_page_no, html_dl: true) %>
<% if current_ability.can_create_any_work? %>
    <%= presenter.attribute_to_html(:date_modified, label: t('hyrax.base.show.last_modified'), html_dl: true) %>
<% end %>
<!--  presenter.attribute_to_html(:based_near_label, html_dl: true)  -->
<%= presenter.attribute_to_html(:biographical_note, html_dl: true) %>
<%= presenter.attribute_to_html(:finding_aid, html_dl: true) %>
<%= presenter.attribute_to_html(:note, html_dl: true) %>
<%= presenter.attribute_to_html(:sub_fond, html_dl: true) %>

</span>
<button onclick="TCDCollapsibleFunction()" id="TCDMoreBtn">Read more</button>
