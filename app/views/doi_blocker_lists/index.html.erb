<% provide :page_header do %>
  <h1><span class="fa fa-ban" aria-hidden="true"></span> DOI Blocker List</h1>
<% end %>

<div class="table-responsive">
  <table class="table table-striped datatable">
    <thead>
      <tr>
        <th>object id</th>
        <th>description</th>
      </tr>
    </thead>
    <% @doi_blocker_lists&.each do | blocked | %>
    <tr>
      <td><%= link_to blocked.object_id, polymorphic_path([main_app, ActiveFedora::Base.find(blocked.object_id, cast: true)]) %></td>
      <td><%= blocked.description %></td>
    </tr>
    <% end %>
  </table>
</div>
